---
layout: null
permalink: /search.json
---
{ "posts" : [
{% for post in site.posts %}{
		"title": {{ post.title | jsonify }},
		"url": "{{ post.url | remove:'index.html' }}",
		"tags": {% if post.tags %}{{ post.tags | tag_json }}{% else %}[]{% endif %},
		"date": "{% if post.date %}{{ post.date | ordinalize }}{% else %}{{ post.url | page_type }}{% endif %}",
		"ts": "{% if post.date %}{{ post.date | timestamp }}{% endif %}",
		"summary": {{ post.content | long_description | jsonify }},
		"keywords": [{% if post.keywords %}{{ post.keywords | keyword_string | keywords | trailing_comma }}{% endif %}{{ post.content | keywords }}]
	},{% endfor %}{% for post in site.pages %}{% capture should_search %}{{ post.url | should_search }}{% endcapture %}{% if post.layout != 'null' and post.layout != 'feed' and should_search == 'true' %}
	{
		"title": {{ post.title | jsonify }},
		"url": "{{ post.url | remove:'index.html' }}",
		"tags": {% if post.tags %}{{ post.tags | tag_json }}{% else %}[]{% endif %},
		"date": "{% if post.date %}{{ post.date | ordinalize }}{% else %}{{ post.url | page_type }}{% endif %}",
		"ts": "{% if post.date %}{{ post.date | timestamp }}{% endif %}",
		"summary": {{ post.content | long_description | jsonify }},
		"keywords": [{% if post.keywords %}{{ post.keywords | keyword_string | keywords | trailing_comma }}{% endif %}{{ post.content | keywords }}]
	},{% endif %}{% endfor %}
	{
        "title": {{ site.title | jsonify }},
		"url": "{{ site.url }}",
		"tags": [],
		"date": "homepage",
		"ts": "",
		"summary": "{{ site.description }}",
		"keywords": []
    }
]}
